@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<style>
    #consoleDiv {
        background-color: black;
    }

    #log {
        list-style: none;
        padding: 0;
    }

    #log span.dateTm {
        padding-right: 0.5rem;
        font-size: small;
        color: white;
    }

    #log span.seqNum {
        margin-right: 0.5rem;
        font-weight: bold;
        color: yellow;
    }

    #log span.ok {
        color: limegreen;
    }

    #log span.fail {
        color: red;
    }

    #log li {
        line-height: 1.125;
        margin-bottom: 1rem;
    }

    .card-body a {
        margin-bottom: 0.5rem;
    }

    .nowrap {
        white-space: nowrap;
    }

    .text-sm {
        font-size: 8pt;
    }
</style>

<div id="myRow" class="row" style="display: flex;">
    <div class="col-md-6 mt-6" style="display: grid;">
        <div class="card">
            <div class="card-header">Type 1 Actions</div>
            <div class="card-body">
                <a asp-page="./Privacy" asp-route-id="" id="action1Button" class="btn btn-primary"><i class="fa fa-edit"></i>Action 1 Button</a>

                <div class="row">
                    <div class="col-12">
                        <p class="font-weight-bold font-italic mb-2">Text Input</p>
                        <div class="input-group">
                            <input id="action1Input" type="text" class="form-control mb-1"
                                   style="max-width: 20rem;" placeholder="Action 1 Input" />
                        </div>
                        <div class="form-check mb-2">
                            <input id="action1CheckBox" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" for="action1CheckBox">Some CheckBox</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Type 1 Sub-Actions</div>
            <div class="card-body">
                <a asp-page="./Privacy" asp-route-id="" id="subAction1Button" class="btn btn-primary"><i class="fa fa-edit"></i>Subaction 1 Button</a>
                <div class="row">
                    <div class="col-12">
                        <p class="font-weight-bold font-italic mb-2">Text Input</p>
                        <div class="input-group" style="align-items: center;">
                            <input id="getAllInfoOfALoadInput" type="text" class="form-control mr-3" placeholder="Type 1 Sub action Input" />

                            <label class="mr-3 font-weight-bold">DropDown Input:</label>
                            <select id="subAction1Dropdown" class="form-control mr-3">
                                <option id="1" value="Yo" selected>Yo</option>
                                <option id="2" value="Yoo">Yoo</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-6">
        <div class="card" style="height: 100%;">
            <div class="card-header">Type 2 Actions</div>
            <div class="card-body">
                Nothing at the moment.
            </div>
        </div>
    </div>
</div>

<div class="row ui-action">
    <div class="col-md-12 mt-4 mb-3">
        <div class="card">
            <div class="card-header">
                Actions Console Result
                <button id="consoleClearBtn" class="btn-sm btn-secondary float-right ml-2">Clear</button>
            </div>
            <div id="consoleDiv" class="card-body">
                <ul id="log"></ul>
            </div>
        </div>
    </div>
</div>